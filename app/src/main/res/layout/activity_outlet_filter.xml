<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.kyledef.findmepizza.ui.OutletFilterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Franchise"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/franchise">
        <RadioButton android:id="@+id/radio_franchise_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_domino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dominos"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_mario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mario's"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_papa_john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papa John's"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_pizza_hut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Hut"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/location">
        <RadioButton android:id="@+id/radio_loc_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_west"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="West"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_east"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="East"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_south"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:id="@+id/run_filter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onButtonClicked"/>


</LinearLayout>
