<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/outlet_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardBackgroundColor="#ffff"
        card_view:cardElevation="5dp"
        android:layout_marginBottom="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="1dp" />

            </android.support.v7.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/outlet_side_margin"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_text"
                android:id="@+id/category"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/outlet_side_margin"
                android:layout_marginTop="1dp"
                android:layout_marginRight="@dimen/outlet_side_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_text"
                android:id="@+id/type"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/outlet_side_margin"
                android:layout_marginTop="1dp"
                android:layout_marginRight="@dimen/outlet_side_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_text"
                android:id="@+id/cost"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/outlet_side_margin"
                android:layout_marginTop="1dp"
                android:layout_marginRight="@dimen/outlet_side_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Franchise"
                android:id="@+id/franchise"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/outlet_side_margin"
                android:layout_marginTop="1dp"
                android:layout_marginRight="@dimen/outlet_side_margin"
                android:layout_marginBottom="1dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>